{
  "manifest_version": 3,
  "name": "Метки для учебника javascript.ru",
  "description": "Метки для современного учебника Javascript",
  "version": "1.2.1",
  "action": {
    "default_popup": "index.html",
    "default_icon": "icon19.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "js": ["static/js/content.js"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ]
}